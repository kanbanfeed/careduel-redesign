<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | CareDuel</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="/styles.css">
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>

    <style>
        /* Utility to hide elements */
        .d-none-custom { display: none !important; }
    </style>
</head>
<body>

    <% if (typeof hideLayout === 'undefined' || !hideLayout) { %>
        <nav class="navbar navbar-expand-lg sticky-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-heart-pulse-fill text-primary"></i>
                    <span>CareDuel.</span>
                </a>
                
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center gap-4">
                        
                        
                        <li class="nav-item">
                            
                            <a href="/login" id="nav-login-btn" class="btn btn-primary-custom py-2 px-4" style="font-size: 0.9rem;">
                                Provider Login
                            </a>

                            <button id="nav-logout-btn" onclick="logout()" class="btn btn-outline-danger py-2 px-4 d-none-custom" style="font-size: 0.9rem; border-radius: 50px;">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    <% } %>

    <%- body %>

    <% if (typeof hideLayout === 'undefined' || !hideLayout) { %>
        <footer style="background: #0f172a; color: white; padding: 60px 0 30px;">
            <div class="container">
                <div class="row gy-4">
                    <div class="col-md-4">
                        <h4 class="text-white h5 fw-bold mb-3">CareDuel.</h4>
                        <p style="color: #94a3b8; font-size: 0.9rem;">
                            The world's most trusted marketplace for specialized medical care. Verified professionals, transparent pricing.
                        </p>
                    </div>
                   
                </div>
                <div class="border-top border-secondary mt-5 pt-4 text-center" style="border-color: #334155 !important;">
                    <small style="color: #64748b;">&copy; 2025 CareDuel Health. Powered by Crowbar Ecosystem.</small>
                </div>
            </div>
        </footer>
    <% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
        document.addEventListener("DOMContentLoaded", function() {
            // 1. Check Browser Storage for ANY valid session
            const session = localStorage.getItem('careduel_session') || localStorage.getItem('crowbar_session');
            
            const loginBtn = document.getElementById('nav-login-btn');
            const logoutBtn = document.getElementById('nav-logout-btn');

            if (session) {
                // User IS logged in: Force Hide Login, Show Logout
                if (loginBtn) loginBtn.style.display = 'none';
                if (logoutBtn) {
                    logoutBtn.classList.remove('d-none-custom');
                    logoutBtn.style.display = 'inline-block';
                }
            } else {
                // User is NOT logged in: Show Login, Hide Logout
                if (loginBtn) loginBtn.style.display = 'inline-block';
                if (logoutBtn) logoutBtn.style.display = 'none';
            }
        });

        // 2. Logout Function
        function logout() {
            // Clear ALL potential keys to be safe
            localStorage.removeItem('careduel_session');
            localStorage.removeItem('careduel_user');
            localStorage.removeItem('crowbar_session');
            localStorage.removeItem('crowbar_user');
            
            // Refresh to home
            window.location.href = '/';
        }
    </script>

</body>
</html>